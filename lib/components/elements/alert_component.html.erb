<%= tag.div role:, class: classes, data:, id: do %>
  <% if icon? %>
    <%= tag.div class: icon_classes %>
  <% end %>
  <div class="text-body">
    <% if title.present? %>
        <div class="fw-semibold"><%= title %></div>
    <% end %>
    <%= value || content %>
  </div>
  <% if dismissible? %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  <% end %>
<% end %>
