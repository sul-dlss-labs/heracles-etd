    <%= render Elements::Tables::TableComponent.new(id: 'dissertation-file-table', label: 'Dissertation file', show_label: false) do |component| %>
      <% component.with_headers([
                                  { label: 'Dissertation File (maximum size 1GB)' },
                                  { label: 'Type' },
                                  { label: 'Size' },
                                  { label: 'Upload Date' }
                                ]) %>
      <% component.with_row(values: values_for_dissertation_file) %>
    <% end %>
    <% if form %>
      <%= form.file_field :dissertation_file, direct_upload: true, accept: 'application/pdf' %>
    <% end %>
