<%= render Edit::StepComponent.new(step_number: 1,
                                   title: 'Verify your citation details',
                                   show: show?,
                                   submission_presenter:,
                                   edit_label: 'Undo your confirmation',
                                   done_field: :citation_verified,
                                   done_label: 'Confirm', done_text: 'By clicking Confirm, I verify the information in this section is correct and complete.') do |component| %>

  <% component.with_help_content do %>
    <%= t('step1.help_html') %>
  <% end %>

  <% component.with_body_content do %>
    <%= render Shared::Step1BodyComponent.new(submission: submission_presenter) %>
  <% end %>
<% end %>
