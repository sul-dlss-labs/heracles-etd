<%= render Shared::StepComponent.new(step: SubmissionPresenter::SUBMITTED_STEP,
                                     title: t('steps.submitted.title')) do |component| %>

  <% component.with_help_content do %>
    <%= t('steps.submitted.help_html') %>
  <% end %>

  <% component.with_body_content do %>
      <%= render Elements::StatusAlertComponent.new do %>
        Dissertation submitted to Registrar: <%= helpers.local_time(submitted_at) %>.
      <% end %>
  <% end %>
<% end %>
