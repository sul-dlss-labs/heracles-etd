<%= render Elements::Tables::TableComponent.new(id:, label:, show_label: false, data:) do |component| %>
  <% component.with_headers([
                              { label: "#{label} (maximum size 1GB)" },
                              { label: 'Type' },
                              { label: 'Size' },
                              { label: 'Upload Date' }
                            ]) %>
  <% unless files.attached? %>
    <% component.with_row(values: [upload_file_link, required_file_type, nil, nil]) %>
  <% else %>
    <% attached_files.each do |file| %>
      <% component.with_row(values: FilePresenter.new(file:, required_file_type:).values) %>
    <% end %>
    <% unless file_type == 'dissertation' %>
      <% component.with_row(values: [upload_file_link, required_file_type, nil, nil]) %>
    <% end %>
  <% end %>
<% end %>
